{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"lineEnding": "lf",
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/out",
			"!**/.next",
			"!**/public"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"nursery": { "useSortedClasses": "warn" }
		},
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/out",
			"!**/.next",
			"!**/public"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "always"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/CHANGELOG.md",
			"!**/pnpm-lock.yaml",
			"!**/.next",
			"!**/out"
		]
	}
}
